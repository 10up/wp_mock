{
	"name"       : "10up/wp_mock",
	"description": "A mocking library to take the pain out of unit testing for WordPress",
	"license"    : "GPL-2.0+",
	"require"    : {
		"php"                 : ">=5.3.2",
		"phpunit/phpunit"     : ">=3.7",
		"mockery/mockery"     : "^0.9",
		"antecedent/patchwork": "~1.2"
	},
	"require-dev": {
		"behat/behat"         : "^3.0"
	},
	"autoload"   : {
		"psr-4"   : {"WP_Mock\\": "./php/WP_Mock"},
		"classmap": ["php/WP_Mock.php"]
	},
	"extra"      : {
		"branch-alias": {
			"dev-dev": "1.0.x-dev"
		}
	},
	"config": {
		"platform": {
			"php": "5.3.3"
		}
	},
	"scripts": {
		"test:behat": "behat",
		"test:phpunit": "phpunit",
		"test"      : [
			"@test:behat",
			"@test:phpunit"
		]
	}
}
